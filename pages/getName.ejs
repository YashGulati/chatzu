  <body>

<div class="userNameDiv">

  <div class="formHeading">
    LOGIN
  </div>

<form action="/userNameSubmit" method="post" class="userNameForm">
  <% if(error!=""){ %>
    <div class="error"><i class="glyphicon glyphicon-exclamation-sign" style="margin-right: 10px;" aria-hidden="true"></i>Error<span><%= error %></span></div><div class="triangle"><div class="innerTriangle"></div></div>
  <% } %>
  <input type="text" name="userName" value="" id="mainBox" placeholder="Your name here">

  <button type="submit" class="btn btn-success-outline">Enter</button>
</button>
</form>
</div>
