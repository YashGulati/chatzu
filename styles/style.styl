@import all
html, body {
    height: 100%;
}
html {
    overflow-y: hidden;
}
body {
    overflow-y: scroll;
    background: url(/bg1.jpg) no-repeat center fixed;
    background-size: cover;
    font-family: "Whitney SSm A", "Whitney SSm B", "Lato", "Lucida Grande", "Lucida Sans Unicode", Tahoma, Sans-Serif !important;
}
header
  position: fixed;
  z-index: 1
  background-color: orange
  width: 100%
  height: 50px
  padding: 0vh 15vw
  color white
  font-size: 30px
  &>*
    float: left
.chatBox
  position: absolute;
  absAndCenter()
  border: 2px solid gray
  width: 80%
  height: 80%
  .chatHeading
    position: relative;
    height: 15%
    background-color: black
    color: #864
    background-image: -webkit-linear-gradient(top, #500, #211)

    div
      font-size: 2em
      position: absolute;
      top: 50%
      transform: translate(0%,-50%);
      margin: 0 15px

  #messages
    height: 75%
    overflow: hidden;
    overflow-y: scroll;
    .me
      right: 0
      background-color: rgba(0,0,0,0.3)
      color: #bbb;
    .otherPerson
      left: 0
      background-color: rgba(255,255,255,0.3)
      color: #222;
    .message
      width: 95%
      position: relative;
      padding: 5px;
      margin: 2px
      font-size: 1.1em
      .messageUserName
        display: inline;
        color: white
        background: gray
        font-weight: bold
        margin-right: 5px
  & form
    position: absolute;
    bottom: 0px
    width: 100%
    display: block;
    height: 10%
    background-color: #3B2B4B
    & input
      position: absolute;
      top: 50%
      left: 50%
      transform: translate(-55%, -50%)
      width: 75%
      height: 70%
      border: none
      font-size: 1.2em
      font-family: arial, sans-serif;
      padding: 0px 10px
    & button
      position: absolute;
      top: 50%
      right: 3%
      transform: translate(0%, -50%)
      margin-right: 4px
      float: right

input:focus { outline:0 !important; }
button:focus { outline:0 !important; }
.btn-circle {
  width: 50px;
  height: 30px;
  text-align: center;
  padding: 6px 0;
  font-size: 12px;
  line-height: 1.428571429;
  border-radius: 10px;
}
.btn-circle.btn-lg {
  width: 50px;
  height: 50px;
  padding: 10px 16px;
  font-size: 18px;
  line-height: 1.33;
  border-radius: 25px;
}
.btn-circle.btn-xl {
  width: 70px;
  height: 70px;
  padding: 10px 16px;
  font-size: 24px;
  line-height: 1.33;
  border-radius: 35px;
}

::-webkit-scrollbar {
    width: 12px;
}

::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
}
@media screen and (max-width: 1000px)
  body
    font-size: 1.1em
  .userNameDiv
    width: 80%
    height: 70%
    font-size: 3em
    .userNameForm

      width: 80%
      margin-top: 10%;
      input[type=text]
        height: 100px
        width: 100%
      button
        font-size: 1.5em
        padding: 5px
        margin: 75px auto
  .chatBox
    width: 100%
    height: 100%
    margin: 0px
    left: 0%
    top: 0%
    transform: translate(0,0);
