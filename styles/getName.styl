@import all

userNameDiv_W = 25%
userNameDiv_H = 48%

.userNameDiv
  width: userNameDiv_W
  background: #2B2B2B
  absAndCenter()
  & .formHeading
    position: relative;
    background-color: #7300AB
    color: white
    font-family: arial
    font-weight: bold
    font-size: 2em
    text-align: center
    vertical-align: middle
    padding: 12px;
  .error
    position: relative;
    color: #e3826d;
    background-color: #f9c8c7
    border: 1px solid #e3826d;
    padding: 2px 10px;
    border-radius: 5px;
    font-weight: bold;
    i
      margin-right 10px
      display inline
    span
      margin 0
  .userNameForm
    padding: 10% 18%
    width: 100%
    *
      display: block;
      width: 100%
    input[type=text]
      height: 32*1.1px
      text-align: center
      margin: 10px auto 20px auto
      font-family: Myriad Pro
      button
@media screen and (max-width: 1000px)
  .userNameDiv
    width: 80%
    height: 70%
    font-size: 1em

    .userNameForm

      padding: 5% 10%
      margin-top: 10%;
      input[type=text]
        height: 50px
      button
        font-size: 1.5em
